<div class="col-md-10">
<%= form_for(@collaboration) do |f| %>
<% if @collaboration.errors.any? %>
<ul>
  <% @collaboration.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<% end %>
  
  <div class="form-group">
    <%= f.label :name, "Project name", class: "col-sm-2 control-label"  %>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
  </div>
  <% end %>
</div>
