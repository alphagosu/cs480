<div class="navbar navbar-default">
  <div class="navbar-header">
    <button class="navbar-toggle" data-target=".navbar-collapse"
                data-toggle="collapse" type="button"></button> 
    <%= link_to "Research collaboration tool", root_path, class: "navbar-brand" %>
  </div>

  <div class="navbar-collapse collapse">
      <% if signed_in? %>
      <ul class="nav navbar-nav">
        <li class="alert-danger"><%= link_to "Inbox", '#' %></li>
        <li><%= link_to "Search", '#' %></li>
        <li><%= link_to "My Profile", edit_user_path(current_user) %></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href=
             "#">Collaborations <span class="caret"></span></a>	
          <ul class="dropdown-menu">
	    
            <li><%= link_to "Create new", '#' %></li>
            <li><%= link_to "Current collaborations", '#' %></li>
          </ul>
	</li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
	<li>
	  <%= link_to current_user, { class: "navbar-default" } do %>
	  Hello, <%= current_user.first_name %>
	  <% end %>
	</li>
	<li><%= link_to "Logout", signout_path, method: "delete" %></li>
      </ul>     
	<% else %>
    
	<ul class="nav navbar-nav navbar-right">
	  <li><%= link_to "Register", registration_path %></li>
	  <li><%= link_to "Login", signin_path %></li>
	</ul>
	<% end %>
  </div><!-- /.nav-collapse -->
</div>
