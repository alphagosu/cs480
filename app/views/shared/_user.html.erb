<div class="row">
  <h3><%= user.name %></h3>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag user.avatar.url(:profile) %>
    </div>
  </div>
  <div class="col-sm-6 col-md-8">
    <p>
      <%= truncate(user.desc, length: 750) %>
    </p>
    <div class="progress">
      <% @rate = current_user.match_rate(user) %>
      <div class="progress-bar" role="progressbar" aria-valuenow="<%= @rate %>" aria-valuemax="100" style="width:<%= @rate %>%"> <%= @rate %>% matching rate</div>
    </div>

  </div>
  <span class="badge badge-success">Member for <%= time_ago_in_words(user.created_at) %></span>
  <div class="pull-right">
    <span class="label label-info"><%= user.county %></span>
    <% if user.is_comm_member %>
    <span class="label label-info">Community member</span>
    <% end %>
    <% if user.is_researcher %>
    <span class="label label-info">Researcher</span>
    <% end %>
    <% if user.is_teacher %>
    <span class="label label-info">Teacher</span>
    <% end %>
    <% if user.is_student %>
    <span class="label label-info">Student</span>
    <% end %>
  </div>
  <div class="pull-right">
    <h3><%= link_to 'More information', user %></h3>
  </div>
</div>
<hr>
